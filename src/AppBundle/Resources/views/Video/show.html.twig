{% extends "::layout.html.twig" %}
{% block title %}{{ video.title }}{% endblock %}

{% block content %}

    <div class="colum_block items_list">
        <section class="heading">
            <h2><span>{{ video.title }}</span></h2>
            <div class="buttons-container">
                <a href="{{ path('video_index') }}" class="back button">
                    <i class="fa fa-chevron-left" aria-hidden="true"></i>
                    <span>Back</span>
                </a>
                <a href="{{ path('video_edit', {id: video.id}) }}" class="edit button" title="Edit">
                    <i class="fa fa-pencil" aria-hidden="true"></i>
                    <span>Edit</span>
                </a>
                <a href="{{ path('video_new') }}" class="add_item button">
                    <i class="fa fa-plus" aria-hidden="true"></i>
                    <span>Add video</span>
                </a>
            </div>
        </section>
        <section class="single-item">
            <div class="image img-wrapper">
                <iframe
                    id="ytp-{{video.id}}"
                    type="text/html" 
                    src="https://www.youtube.com/embed/{{video.yid}}?autoplay=0"
                    frameborder="0"
                ></iframe>
            </div>
            <div class="description">
                <div>
                    <span><strong>Description:</strong></span>
                </div>
                <span class="description">{{ video.description }}</span>
            </div>
            <div class="time">
                <span class="posted_in"><strong>Added:</strong> {{ video.getCreatedAt()|date('Y-m-d H:ia') }}</span>
                <span> | </span>
                <span class="updated_in"><strong>Updated:</strong> {{ video.getUpdatedAt()|date('Y-m-d H:ia') }}</span>
            </div>
        </section>
    </div>

{% endblock %}
