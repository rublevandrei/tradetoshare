{% extends "::layout.html.twig" %}

{% block title %}Video{% endblock %}

{% block content %}
    <div class="colum_block items_list">
        <section class="heading">
            <h2>Video</h2>
            <a href="{{ path('video_new') }}" class="add_item button">
                <i class="fa fa-plus" aria-hidden="true"></i><span>Add Video</span>
            </a>
        </section>
        <section class="items video">
            <div class="row grid">

                {% for video in videos %}

                    <div class="item col-sm-6 col-md-4">
                        <div class="image img-wrapper">

                            <iframe
                                id="ytp-{{video.id}}"
                                type="text/html" 
                                src="https://www.youtube.com/embed/{{video.yid}}?autoplay=0"
                                frameborder="0"
                            ></iframe>
                        </div>
                        <div class="title">
                            <div class="right-container">
                                <a href="{{ path('video_show', {id: video.id}) }}" class="name">
                                    <span class="name">{{ video.title }}</span>
                                </a>
                                <a href="{{ path('video_edit', {id: video.id}) }}" class="edit" title="Edit video">
                                    <span><i class="fa fa-pencil" aria-hidden="true"></i></span>
                                </a>
                            </div>
                            <a href="{{ path('video_delete', {id: video.id}) }}" class="delete-container" title="Delete video" onclick="var result = confirm('Are you sure you want to delete video? You cannot undo this action'); if(!result) return false;">
                                <i class="fa fa-trash" aria-hidden="true"></i>
                            </a>

                        </div>
                    </div>
                {% else %}
                    No videos found
                {% endfor %}
            </div>
        </section>
    </div>
{% endblock %}