{% extends "::layout.html.twig" %}
{% block title %}Articles{% endblock %}

{% block content %}
    <div class="col-sm-8">
        <section class="profile_member">
            <div class="title_button">
                <a href="{{ path('article_new') }}" class="invite_friends"><span>Add Article</span></a>
            </div>
            <h2 class="section_title">Articles</h2>



            <div class="pagination pagination-letter">
                <ul>
                    {% for letter in 'a'|upper..'z'|upper %}
                        <li><a {% if(letter == chosenLetter|upper) %}class="active"{% endif %}
                               href="{{ path('article_index', {letter: letter}) }}">{{ letter }}</a></li>
                    {% endfor %}
                </ul>
            </div>
        </section>
        <section class="articles_page">
            <div class="row articles_grid">
                {% for article in articles %}
                    <div class="col-md-6 article_block matchHeight_add">
                        <a href="{{ path('article_show', {id: article.id}) }}">
                            <h2 class="matchHeight">
                                {{ article.title }}
                            </h2>
                            <div class="image">
                                {% if(article.image != null) %}
                                    <img src="{{ asset('bundles/framework/images/article/' ~ article.image) }}"
                                         alt="{{ article.title }}"/>
                                {% else %}
                                    <img src="{{ asset('bundles/framework/images/no-logo.png') }}"
                                         alt="{{ article.title }}"/>
                                {% endif %}
                                {#<img src="images/feed_img.jpg" alt="feed_img">#}
                            </div>
                        </a>
                    </div>
                {% else %}
                    No articles found
                {% endfor %}
            </div>
        </section>
    </div>
{% endblock %}