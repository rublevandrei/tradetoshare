{% extends "::layout.html.twig" %}


{% block content %}
    <h3>{{ 'header.connecting' | trans({}, 'HWIOAuthBundle')}}</h3>
    <div class="row">
        <div class="span6">
            <p>{{ 'connect.confirm.text' | trans({'%service%': 'instagram' | trans({}, 'HWIOAuthBundle'), '%name%': userInformation.realName}, 'HWIOAuthBundle') }}</p>            
        </div>
    </div>
    <div class="span6">
	{% if userInformation.profilePicture is defined and userInformation.profilePicture is not empty %}
	    <img src="{{ userInformation.profilePicture }}" />
	{% endif %}
    </div>
    <p>
	    <div>
	        <a href="{{ path('user_instagram_connect') }}" class="btn">{{ 'connect.confirm.submit' | trans({}, 'HWIOAuthBundle') }}</a>
	        <a href="{{ path('hwi_oauth_connect') }}" class="btn">{{ 'connect.confirm.cancel' | trans({}, 'HWIOAuthBundle') }}</a>
	    </div>
    </p>
{% endblock content %}
 {% block aside %} {% endblock %}