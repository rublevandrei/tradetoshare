{% block fos_user_content %}
  <div class="row register_page">
        <div class="col-sm-12">
            <h1 class="register_title text-center">Login</h1>
        </div>
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <div class="col-sm-12 login_form">
            <form action="{{ path('fos_user_security_check') }}" method="post">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="Email" autofocus="">
                <input type="password" id="password" name="_password" required="required" placeholder="Password">

                <div class="text-center">
                    <input type="submit" value="Login">
                </div>
            </form>

            <div class="additional_buttons">
                <ul>
                    <li>
                        <a href="#">Join</a>
                    </li>
                    <li>
                        <a href="{{ path('fos_user_resetting_request') }}">Lost Password</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}

